<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="500.0" styleClass="background" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nd.create.quote.view.SourceDialogController">
   <children>
      <Label layoutX="16.0" layoutY="29.0" styleClass="label-crimson" text="Add a Source &amp; Comment" />
      <Label layoutX="14.0" layoutY="165.0" text="Source URL" />
      <Label layoutX="20.0" layoutY="114.0" text="Comment" />
      <TextField fx:id="sourceURLField" layoutX="103.0" layoutY="157.0" prefHeight="37.0" prefWidth="347.0">
         <tooltip>
            <Tooltip text="Enter a URL that the user will be sent to if they guess this answer" />
         </tooltip>
      </TextField>
      <TextField fx:id="commentField" layoutX="103.0" layoutY="106.0" prefHeight="37.0" prefWidth="347.0">
         <tooltip>
            <Tooltip text="This is a comment that the user will see if they guess this answer" />
         </tooltip>
      </TextField>
      <Button layoutX="295.0" layoutY="253.0" mnemonicParsing="false" onAction="#handleOK" text="OK" />
      <Button layoutX="369.0" layoutY="253.0" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
   </children>
</AnchorPane>
